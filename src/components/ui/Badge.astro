---
interface Props {
  type?: 'primary' | 'secondary'
  class?: string
}

const {
  type = 'primary',
  class: className = '',
  ...rest
} = Astro.props

const variantClasses = {
  primary: 'bg-gray-400 text-gray-600',
  secondary: 'bg-purple-100 text-gray-800'
}

const classes = [
  'inline-flex items-center justify-center',
  'px-4 py-2 h-8',
  'text-sm font-medium rounded',
  variantClasses[type],
  className
].filter(Boolean).join(' ')
---

<div class={classes} {...rest}>
  <slot />
</div>

